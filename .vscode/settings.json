{
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js",
    "*.tsx": "${capture}.module.css, ${capture}.module.less, ${capture}.config.ts",
    "package.json": "package-lock.json, yarn.lock, package-lock.json",
    "project.config.json": "project.private.config.json, project.tt.json"
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "editor.formatOnPaste": false,
  "editor.formatOnSave": true,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true,
    "**/node_modules": false
  }
}
